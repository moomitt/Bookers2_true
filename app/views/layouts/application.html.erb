<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=devise-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" 
          aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <a class="nav-link text-light" herf="/users/:user_id">
                    <i class="fas fa-home"></i>
                    Home
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" herf="/users">
                    <i class="fas fa-users"></i>
                    Users
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" herf="/books">
                    <i class="fas fa-book-open"></i>
                    Books
                  </a>
                </li>
                <li>
                  <a class="nav-link text-light" rel="nofollow" data-method="delete" herf="/users/sign_out">
                    <i class="fas fa-sign-out-alt"></i>
                    Log out
                  </a>
                </li> 
              <% else %>
                <li>
                  <%= link_to "Home", root_path %>
                </li>
                <li>
                  <%= link_to "About", about_path %>
                </li>
                <li>
                  <%= link_to "Sign up", new_user_registration_path %>
                </li>
                <li>
                  <%= link_to "Log in", new_user_session_path %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
     
    </header>
    <%= yield %>
  </body>
</html>
